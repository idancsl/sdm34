datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // pastikan ini ada
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  name      String
}

model Guru {
  id           Int      @id @default(autoincrement())
  name         String
  subject      String
  photo        String
  jenisKelamin String
  createdAt    DateTime @default(now())
}

model Pendaftar {
  id              String   @id @default(uuid())
  nama            String
  tempatLahir     String
  tanggalLahir    DateTime
  jenisKelamin    String
  namaAyah        String
  namaIbu         String
  hp              String
  alamat          String
  akte            String
  kk              String
  ijazah          String
  pasFoto         String
  buktiPembayaran String
  createdAt       DateTime @default(now())
  verified        Boolean  @default(false)
}
